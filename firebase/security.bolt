////////////////////////////////////////////////////////////////
// FEEDBACK
////////////////////////////////////////////////////////////////

type FeedbackTask {
  type: String,
  user: String
}

path /queues/feedback/tasks/$task is FeedbackTask {
  write() = isUser(newData.child('user').val());
}
