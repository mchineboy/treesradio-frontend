{
  "rules": {
    "_admin": {
      ".read": "true"
    },
    "backend": {
      "chatlock": {
        ".read": "true"
      }
    },
    "chat": {
      ".read": "true"
    },
    "queues": {
      "chat": {
        "tasks": {
          "$task": {
            ".write": "auth != null && auth.uid == newData.child('uid').val()"
          }
        }
      },
      "feedback": {
        "tasks": {
          "$task": {
            ".validate": "newData.hasChildren(['type', 'user'])",
            "type": {
              ".validate": "newData.isString()"
            },
            "user": {
              ".validate": "newData.isString()"
            },
            "$other": {
              ".validate": "false"
            },
            ".write": "auth != null && auth.uid == newData.child('user').val()"
          }
        }
      }
    },
    "playlists": {
      "$userid": {
        ".read": "auth != null && auth.uid == $userid",
        ".write": "auth != null && auth.uid == $userid"
      }
    },
    "playing_media": {
      ".read": "true"
    },
    "presence": {
      ".read": "true",
      "$username": {
        ".write": "auth != null && auth.uid == newData.child('uid').val() || auth != null && auth.uid == data.child('uid').val()"
      }
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "true"
      }
    },
    "moderator": {
      ".read": "true"
    },
    "bans": {
      ".read": "true"
    },
    "waitlist": {
      "tasks": {
        ".read": "true",
        "$task": {
          ".write": "auth != null && auth.uid == newData.child('uid').val() || auth != null && auth.uid == data.child('uid').val()"
        }
      }
    }
  }
}
